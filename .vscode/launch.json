    "version": "0.2.0",
    "configurations": [
        {
            "command": "cd app && npm start",
            "name": "Frontend",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "runserver.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}